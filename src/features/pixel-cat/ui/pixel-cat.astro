<div class="pixel-cat" data-pixel-cat data-scene="idle" data-direction="left">
  <div
    class="pixel-cat__bubble"
    data-pixel-cat-bubble
    role="status"
    aria-live="polite"
    hidden
  >
    <span data-pixel-cat-message></span>
  </div>

  <button
    type="button"
    class="pixel-cat__sprite"
    data-pixel-cat-sprite
    aria-label="Pixel cat"
  ></button>
</div>

<script>
  import { PixelCatController } from "../pixel-cat-controller";

  const cats = document.querySelectorAll("[data-pixel-cat]");

  cats.forEach((element) => {
    if (!(element instanceof HTMLElement)) return;

    const controller = new PixelCatController(element);
    void controller.init();

    const teardown = () => controller.destroy();

    window.addEventListener("pagehide", teardown, { once: true });
    document.addEventListener("astro:before-swap", teardown, { once: true });
  });
</script>

<style>
  .pixel-cat {
    --cat-x: 0px;
    --cat-y: 100px;
    position: fixed;
    left: 2rem;
    top: 4rem;
    z-index: 50;
