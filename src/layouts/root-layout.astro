---
import Navbar from "../components/navbar.astro";
import PixelCat from "../features/pixel-cat/ui/pixel-cat.astro";
import "../styles/global.css";
import {
  DEFAULT_DESCRIPTION,
  DEFAULT_KEYWORDS,
  PRIMARY_NAME,
  SITE_URL,
  toAbsoluteUrl,
} from "../lib/seo";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  type?: "website" | "article";
  noindex?: boolean;
  canonicalPath?: string;
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
}

const {
  title,
  description = DEFAULT_DESCRIPTION,
  ogImage,
  type = "website",
  noindex = false,
  canonicalPath,
  structuredData,
} = Astro.props;

const pageTitle = title
  ? `${title} | ${PRIMARY_NAME}`
  : `${PRIMARY_NAME} | Frontend Developer`;

const canonicalUrl = toAbsoluteUrl(canonicalPath ?? Astro.url.pathname);
const ogImageUrl = ogImage ? toAbsoluteUrl(ogImage) : toAbsoluteUrl("/favicon.png");
const robotsContent = noindex
  ? "noindex, nofollow"
  : "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1";
const schemaItems = Array.isArray(structuredData)
  ? structuredData
  : structuredData
    ? [structuredData]
    : [];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="keywords" content={DEFAULT_KEYWORDS.join(", ")} />
    <meta name="author" content={PRIMARY_NAME} />
    <meta name="robots" content={robotsContent} />
    <meta name="generator" content={Astro.generator} />

    <link rel="canonical" href={canonicalUrl} />
    <link rel="sitemap" type="application/xml" href={`${SITE_URL}/sitemap-index.xml`} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`${PRIMARY_NAME} Blog RSS Feed`}
      href={`${SITE_URL}/rss.xml`}
    />

    <meta property="og:type" content={type} />
    <meta property="og:site_name" content={PRIMARY_NAME} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:locale" content="en_US" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <title>{pageTitle}</title>

    {
      schemaItems.map((schema) => (
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
      ))
    }
  </head>
  <body>
    <main
      class="min-h-dvh max-w-4xl mx-auto relative px-2 md:px-4 lg:px-0 pt-14"
    >
      <Navbar />
      <slot />
    </main>
    <PixelCat />
  </body>
</html>
