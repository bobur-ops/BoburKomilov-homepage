---
interface Props {
  href: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
  rel?: string;
}

const { href, target = "_self", rel } = Astro.props;

const { pathname } = Astro.url;

const isActive =
  pathname.startsWith(href) || href === pathname.replace(/\/$/, "");
---

<a
  href={href}
  target={target}
  rel={rel ?? (target === "_blank" ? "noopener noreferrer" : undefined)}
  class:list={[
    "hover:underline text-lg underline-offset-4",
    {
      "font-bold underline": isActive,
    },
  ]}
>
  <slot />
</a>
